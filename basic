<body>
  <div class="container">
    <h1>Movie Recommender System</h1>

    <!-- Search Bar -->
    <div class="search-bar">
      <input type="text" id="searchInput" placeholder="Search for movies...">
      <button onclick="searchMovies()"><i class="fas fa-ticket-alt"></i> Search</button>
    </div>

    <!-- Movie List -->
    <div class="movie-list" id="movieList"></div>

    <!-- Movie Details -->
    <div class="movie-details" id="movieDetails"></div>
  </div>

  <script>
    // Simulated movie data with actual ratings for the recommendations
    const movieData = [
      { id: 1, title: 'The Matrix', year: 1999, genre: 'Action', description: 'A hacker discovers the shocking reality behind our world.', rating: 4.7 },
      { id: 2, title: 'Inception', year: 2010, genre: 'Sci-Fi', description: 'A thief steals corporate secrets using dream-sharing technology.', rating: 4.3 },
      { id: 3, title: 'Interstellar', year: 2014, genre: 'Drama', description: 'A team of explorers travel through a wormhole in space.', rating: 4.8 }
    ];

    // Function to display movie recommendations
    function searchMovies() {
      const movieList = document.getElementById('movieList');
      const searchTerm = document.getElementById('searchInput').value.toLowerCase();
      
      // Clear previous results
      movieList.innerHTML = '';

      // Filter movies by search term
      const filteredMovies = movieData.filter(movie => movie.title.toLowerCase().includes(searchTerm));

      // Display filtered movies
      filteredMovies.forEach(movie => {
        const movieItem = document.createElement('div');
        movieItem.classList.add('movie-item');
        
        movieItem.innerHTML = `
          <h3><i class="fas fa-popcorn"></i> ${movie.title}</h3>
          <p>${movie.genre} | ${movie.year}</p>
          <div class="stars">${renderStars(movie.rating)}</div>
        `;
        
        // Click event to display movie details
        movieItem.onclick = () => showMovieDetails(movie);

        movieList.appendChild(movieItem);
      });
    }

    // Function to render star ratings with half-star support
    function renderStars(rating) {
      let stars = '';
      for (let i = 1; i <= 5; i++) {
        if (i <= Math.floor(rating)) {
          stars += `<i class="fas fa-star"></i>`;
        } else if (i === Math.ceil(rating) && rating % 1 !== 0) {
          stars += `<i class="fas fa-star-half-alt"></i>`;
        } else {
          stars += `<i class="far fa-star"></i>`;
        }
      }
      return stars;
    }

    // Function to display selected movie details
    function showMovieDetails(movie) {
      const movieDetails = document.getElementById('movieDetails');
      
      // Populate movie details section
      movieDetails.innerHTML = `
        <h2>${movie.title} (${movie.year}) <i class="fas fa-ticket-alt"></i></h2>
        <p><strong>Genre:</strong> ${movie.genre}</p>
        <p><strong>Description:</strong> ${movie.description}</p>
        <div class="stars">Rating: ${renderStars(movie.rating)}</div>
      `;
    }
  </script>
</body>
